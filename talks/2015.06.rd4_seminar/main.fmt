%format MisIn  = "{" isIn "}_{M}"
%format MareAllTrueSpec  = "{" areAllTrueSpec "}_{M}"
%format MisInMareAllTrueSpec  = "{" isInAreAllTrueSpec "}_{M}"
%format x0     
%format mx0    
%format p0     
%format mxy0   
%format mx1    
%format p1     
%format mxy1   

